{
  "name": "sondbound",
  "displayName": "SÖNDBÖUND",
  "description": "SÖNDBÖUND editor inside VS Code (Webview wrapper around the built-in audio editor).",
  "version": "0.0.1",
  "publisher": "smokydastona",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smokydastona/S-NDB-UND-vs-code.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sondbound.openUI",
    "onCommand:sondbound.openEditor",
    "onCommand:sondbound.generate",
    "onCommand:sondbound.generateSound",
    "onCommand:sondbound.exportPack"
  ],
  "main": "./out/extension.js",
  "files": [
    "out/**",
    "electron/editor/**",
    "src/soundgen/**/*.py",
    "src/soundgen/**/*.md",
    "configs/**",
    "example_manifest.json",
    "requirements.txt",
    "pyproject.toml",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "sondbound.openUI",
        "title": "SÖNDBÖUND: Open UI"
      },
      {
        "command": "sondbound.openEditor",
        "title": "SÖNDBÖUND: Open Editor"
      },
      {
        "command": "sondbound.generate",
        "title": "SÖNDBÖUND: Generate Sound"
      },
      {
        "command": "sondbound.generateSound",
        "title": "SÖNDBÖUND: Generate Sound (Prompt → WAV)"
      },
      {
        "command": "sondbound.exportPack",
        "title": "SÖNDBÖUND: Export Pack (Manifest → ZIP)"
      }
    ],
    "configuration": {
      "title": "SÖNDBÖUND",
      "properties": {
        "sondbound.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Optional override for Python executable used by the backend. If empty, uses SOUNDGEN_PYTHON env var, then .venv, then 'python' on PATH."
        },
        "sondbound.defaultEngine": {
          "type": "string",
          "default": "rfxgen",
          "description": "Default generation engine (used when commands are called without an explicit engine)."
        },
        "sondbound.defaultSeconds": {
          "type": "number",
          "default": 3.0,
          "description": "Default sound duration in seconds (used when seconds are not provided)."
        },
        "sondbound.defaultPost": {
          "type": "boolean",
          "default": true,
          "description": "Whether to apply post-processing by default."
        },
        "sondbound.defaultOutputSubdir": {
          "type": "string",
          "default": "outputs",
          "description": "Default subfolder (relative to workspace root) for generated WAV output when no explicit outputPath is provided."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.5.4"
  }
}
