{
  "name": "sondbound-electron",
  "private": true,
  "version": "0.0.1",
  "description": "Electron shell for SÖNDBÖUND (Python/Gradio backend)",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "prep-assets": "node scripts/prepare-assets.js",
    "prep-backend": "node scripts/prepare-assets.js && node scripts/prepare-backend.js",
    "pack": "npm run prep-backend && electron-builder --dir",
    "dist": "npm run prep-backend && electron-builder",
    "pack:store": "npm run prep-backend && electron-builder --win appx --dir",
    "dist:store": "npm run prep-backend && electron-builder --win appx"
  },
  "dependencies": {
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^2.1.8"
  },
  "build": {
    "appId": "com.smokydastona.sondbound",
    "productName": "SÖNDBÖUND",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "publisherName": [
        "SmokyDaStona"
      ],
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "appx": {
      "applicationId": "Sondbound",
      "publisherDisplayName": "SmokyDaStona"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
