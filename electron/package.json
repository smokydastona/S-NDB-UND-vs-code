{
  "name": "sondbound-electron",
  "private": true,
  "version": "0.0.1",
  "description": "Electron shell for SÖNDBÖUND (Python/Gradio backend)",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "prep-backend": "node scripts/prepare-backend.js",
    "pack": "npm run prep-backend && electron-builder --dir",
    "dist": "npm run prep-backend && electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.smokydastona.sondbound",
    "productName": "SÖNDBÖUND",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
